#!/bin/bash
# M112 handler to update variables_handler.wearc and variables.txt

# Check if a parameter is provided
if [ -z "$1" ]; then
  echo "Error: No parameter provided."
  exit 1
fi

# Unlink the pin from its signal
halcmd unlinkp pyvcp.wearc_display

# Set the HAL pin value
halcmd setp pyvcp.wearc_display "$1"

# Reconnect the pin to its signal
halcmd net wearc-sync pyvcp.wearc_display

# Update variables.txt
sed -i "s/^wearc=.*/wearc=$1/" /home/cnc/linuxcnc/configs/xzacw/variables.txt

exit 0