<pyvcp>
    <label>
        <text>"Spindle speed:"</text>
    </label>
    <bar>
        <halpin>"spindle-speed"</halpin>
        <max_>12000</max_>
    </bar>
    <label>
        <text>"at speed:"</text>
    </label>
    <led>
        <halpin>"at-speeds"</halpin>
        <size>20</size>
        <on_color>"green"</on_color>
        <off_color>"red"</off_color>
    </led>
    <label>
        <text>"coolant on"</text>
    </label>
    <led>
        <halpin>"coolant-on"</halpin>
        <size>20</size>
        <on_color>"green"</on_color>
        <off_color>"red"</off_color>
    </led>
    <labelframe text="Digital inputs">
    <font>("Helvetica",16)</font>
    <hbox>
    <label>
        <text>"DI0_Gripper"</text>
    </label>
    <led>
        <halpin>"DI0"</halpin>
        <size>20</size>
        <on_color>"green"</on_color>
        <off_color>"red"</off_color>
    </led>
    <label>
        <text>"DI1_jack"</text>
    </label>
    <led>
        <halpin>"DI1"</halpin>
        <size>20</size>
        <on_color>"green"</on_color>
        <off_color>"red"</off_color>
    </led>
    <label>
        <text>"DI2_grippers_jack"</text>
    </label>
    <led>
        <halpin>"DI2"</halpin>
        <size>20</size>
        <on_color>"green"</on_color>
        <off_color>"red"</off_color>
    </led>
    <label>
        <text>"DI3_coolant"</text>
    </label>
    <led>
        <halpin>"DI3"</halpin>
        <size>20</size>
        <on_color>"green"</on_color>
        <off_color>"red"</off_color>
    </led>
    </hbox>
    </labelframe>

